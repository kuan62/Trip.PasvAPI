@using Trip.PasvAPI.Models.Model

@model StaffModel
@{
    Layout = null;
}
 
 
<form id="psw_form" class="form" role="form">
    <input type="hidden" id="staff_oid" name="staff_oid" value="@Model.staff_oid" />
    <div class="container-fluid">
          <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label class="mr-sm-2">帳號</label>
                    <div class="form-control mr-sm-2" style="border:none;"> @Model.staff_account</div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-12 form-group">
                <label for="psw1">新密碼</label>
                <input id="psw1" name="psw1" type=password class="form-control" placeholder="輸入新密碼"
                       data-bv-identical="true"
                       data-bv-identical-field="psw2"
                       data-bv-identical-message="與'確認密碼'的內容不一致"
                       required />
            </div>

            <div class="col-md-12 form-group">
                <label for="psw2">確認密碼</label>
                <input id="psw2" name="psw2" type=password class="form-control" placeholder="輸入新密碼確認"
                       data-bv-identical="true"
                       data-bv-identical-field="psw1"
                       data-bv-identical-message="與'新密碼'的內容不一致"
                       required />
            </div>

        </div>
    </div>
</form>

<script type="text/javascript">$('#psw_form').bootstrapValidator({
        feedbackIcons: {
            valid: null,
            invalid: null,
            validating: null
        }
    });</script>